/**app.wxss**/
@import '/font/font.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.video-menu{
  position: relative;
  /* top:-90rpx; */
  height: 135rpx;
  width:100%;
  display: flex;
  /* background: linear-gradient(rgba(255, 255, 255, 0), #000000); */
  color: #ffffff;
  align-items:center;
  /* background-image: url(images/gradualBg.png); */
  flex-direction: column;
}
.video-log-container{
  display: flex;
  flex-direction: row;
  width: 100%;
  height:45rpx;
}
.video-log-text{
  margin-left: 20rpx;
}
.video-option-menu{
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items:center;
  background-color: rgba(158, 159, 160, 0.5);
  justify-content: space-between;
}
.flex-box{
   display: flex; 
   margin: 0 10rpx;
}
.video-image{
  width: 80rpx;
  height: 80rpx;
}
.video-image-60{
  width: 60rpx;
  height: 60rpx;
}
.video-image-80{
  width: 80rpx;
  height: 80rpx;
}
